<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--actionMode覆盖actionbar，不顶下来-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!--<item name="android:windowAnimationStyle">@style/NoAnimation</item>-->
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHighlight">@color/colorPrimary66</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="bottomSheetTheme">@style/MyBottomSheet</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme" parent="BaseTheme.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.CustomCursor">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/colorPrimary66</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_light</item>
    </style>

    <style name="MyBottomSheet" parent="BottomSheet.Light">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
